<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
  <% if @current_user != nil %>
    <h2>
      Add a new photo
    </h2>
    <form action="/insert_photo" method="post" enctype="multipart/form-data">
        <div>
          <label for="image_box">
            Image
          </label>
          <input type="file" id="image_box" name="query_image">
        </div>
      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3" placeholder="Enter a caption for the photo..."></textarea>
      </div>

      <button>
        Add photo
      </button>
    </form>
    <% else %> 
    <div>Sign in to add new photo </div>
    <% end %>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes count
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
        <% if !a_photo.owner.private %>
          <tr>
            <td>
              <img src="<%= a_photo.image%>" class="img-responsive">
            </td>

            <td>
              <%= a_photo.caption %>
            </td>

            <td>
              <%= a_photo.owner.username %>
            </td>

            <td>
              <%= time_ago_in_words(a_photo.created_at) %> ago
            </td>

            <td>
              <%= a_photo.likes_count %>
            </td>

            <td>
              <a href="/photos/<%= a_photo.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
